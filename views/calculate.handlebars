<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="card" style="width: 18rem;">
                <img src="{{car.picture}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{car.make}} {{car.model}}/h5>
                        <p class="card-text">{{car.pricePerWeek}}/week</p>
                        <p class="card-text">{{car.pricePerHour}}/hour</p>

                        <a href="/displayCar/{{car._id}}" class="btn btn-primary">Contact Owner</a>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <form action="/calculateTotal/{{car._id}}" method="POST">
                <div class="form-group">
                    <label for="hour">How long do you rent?</label>
                    <select name="hour" class="form-control">
                        <option value="0">0 hr</option>
                        <option value="1">1 hr</option>
                        <option value="2">2 hr</option>
                        <option value="3">3 hr</option>
                        <option value="4">4 hr</option>
                        <option value="5">5 hr</option>
                        <option value="6">6 hr</option>
                        <option value="7">7 hr</option>
                        <option value="8">8 hr</option>
                    </select>
                    <select name="week" class="form-control">
                        <option value="0">0 wk</option>
                        <option value="1">1 wk</option>
                        <option value="2">2 wk</option>
                        <option value="3">3 wk</option>
                        <option value="4">4 wk</option>
                        <option value="5">5 wk</option>
                        <option value="6">6 wk</option>
                        <option value="7">7 wk</option>
                    </select>
                    <div class="form-group">
                        <button type="submit" class="form-control btn btn-danger">Calculate Total</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>