{{#each cars}}
<a href="/displayCar/{{_id}}">
    <div class="media">
        <input type="hidden" id="carID" value="{{_id}}">
        <img src="{{owner.image}}" class="mr-3" width="64px" height="64px">
        <div class="media-body">
            <h5 class="mt-0">{{make}} {{model}} {{year}} </h5>
            <div class="row">
                {{#each image}}
                <div class="col-sm">
                    <img src="{{imageUrl}}" class="img-fluid" width="300px;" height="auto">
                </div>
                {{else}}
                <img src="/image/logo.png" alt="">
                {{/each}}
            </div>
            <p>${{pricePerHour}} per hour </p>
            <p>$ {{pricePerWeek}} per week</p>
            <small> {{location}} </small>
            <small>{{date}}</small>

        </div>
    </div>
</a>
<hr>
{{else}}
<p>No Car Found</p>
{{/each}}